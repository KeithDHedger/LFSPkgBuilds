if [ -e ./SystemData ];then
	. ./SystemData
else
	echo "No SystemData file found ..."
	exit 0
fi

while read
	do
		sed -r -i 's/\bBUILD=.*\b/BUILD=${BUILD:-1}/' ${REPLY}
	done < <(find ${LFS}/LFSPkgBuildScripts -iname "*.LFSBuild")