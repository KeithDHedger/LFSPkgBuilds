#!/bin/bash -e

. /usr/share/LFSPkg/LFSFunctions

DEPENDS="xmlto-0.0.26 Links-2.14[0;0m"
if ! lfspkg -B "$DEPENDS";then
	exit 100
fi

PKGNAME="xdg-utils"
TARNAME="$PKGNAME"
VERSION="1.1.0"
BUILD=${BUILD:-1}
SECTION="DESKTOP"
SUFFIX="LFSPKG"
MINORVERSION="rc3"

TARBALL="${TARNAME}-${VERSION}-${MINORVERSION}.tar.gz"

scriptLog "${PKGNAME}-${VERSION}"
gettar "http://people.freedesktop.org/~rdieter/${TARNAME}/${TARBALL}" $SECTION

PKG="${OUTPUT}/${PKGNAME}"

DOWHAT=${1:-"build"}
rm -rf "$PKG" || true
mkdir -p "$PKG"
tar -xvf "${SOURCEARCHIVES}/${SECTION}/${TARBALL}"

pushd "${TARNAME}-${VERSION}-${MINORVERSION}"
	./configure --prefix=/usr --mandir=/usr/share/man
	make $MAKEFLAGS||make|| exit 1
	make install DESTDIR=$PKG || exit 1
popd

checketc $PKG
packageclean "$PKG"

pushd "$PKG"
	/usr/bin/lfspkg -n "$PKGNAME" -p "$VERSION" -d $SECTION -b $BUILD -s $SUFFIX -m
popd

case $DOWHAT in
	up*)
		lfspkg "^${PKGNAME}-[0-9][0-9]*" "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -u
		;;
	"install")
		lfspkg "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -i
		;;
	"build")
		echo "Just built"
		;;
	*)
		echo "*** Unknown command ***"
		exit 1
esac

rm -r "$PKG" "${TARNAME}-${VERSION}-${MINORVERSION}"
