#!/bin/bash -e

. /usr/share/LFSPkg/LFSFunctions

DEPENDS="alsa-lib-1.0.29 GTK-2.24.28 Zip-3.0 UnZip-6.0 libevent-2.0.22 libvpx-1.4.0 NSPR-4.10.9 NSS-3.20 SQLite-3.8.11.1 yasm-1.3.0"
if ! lfspkg -B "$DEPENDS";then
	exit 100
fi

PKGNAME="thunderbird"
TARNAME="$PKGNAME"
VERSION="38.3.0"
BUILD=${BUILD:-1}
SECTION="DESKTOP"
SUFFIX="LFSPKG"
TARBALL="${TARNAME}-${VERSION}.source.tar.bz2"
gettar "https://ftp.mozilla.org/pub/mozilla.org/thunderbird/releases/${VERSION}/source/${TARBALL}" $SECTION

PKG="${OUTPUT}/${PKGNAME}"

DOWHAT=${1:-"build"}
rm -rf "$PKG" || true
mkdir -p "$PKG"
tar -xvf "${SOURCEARCHIVES}/${SECTION}/${TARBALL}"

pushd comm-esr*
	cp ../mozconfig.thunderbird mozconfig
#set the lib suffix in the config file
	sed -i "s/libLIBDIRSUFFIX/lib${LIBDIRSUFFIX}/" mozconfig
	mkdir -vp mozilla/thunderbuild
	mkdir -pv $PKG/usr/share/applications $PKG/usr/share/pixmaps

	export SHELL=/bin/sh
	sed -i '/^ftglyph.h/ i ftfntfmt.h' mozilla/config/system-headers
	make -f client.mk|| exit 1
	make -f client.mk install INSTALL_SDK= DESTDIR=$PKG|| exit 1

	ln -sfv ../lib${LIBDIRSUFFIX}/${PKGNAME}-${VERSION}/thunderbird $PKG/usr/bin
	ln -sfv /usr/lib${LIBDIRSUFFIX}/${PKGNAME}-${VERSION}/chrome/icons/default/default256.png $PKG/usr/share/pixmaps/thunderbird.png
popd

checketc $PKG
packageclean "$PKG"

pushd "$PKG"
	/usr/bin/lfspkg -n "$PKGNAME" -p "$VERSION" -d $SECTION -b $BUILD -s $SUFFIX -m
popd

case $DOWHAT in
	up*)
		lfspkg "^${PKGNAME}-[0-9][0-9]*" "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -u
		;;
	"install")
		lfspkg "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -i
		;;
	"build")
		echo "Just built"
		;;
	*)
		echo "*** Unknown command ***"
		exit 1
esac

rm -r "$PKG" comm-esr*
