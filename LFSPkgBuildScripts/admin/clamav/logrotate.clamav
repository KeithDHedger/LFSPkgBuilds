/var/log/clamav/*.log
{
    su clamav clamav
    weekly
    rotate 5
    compress
    delaycompress
    notifempty
    missingok
    create 0660 clamav clamav
    postrotate
    /bin/kill -HUP `cat /var/run/clamav/clamd.pid 2>/dev/null` 2>/dev/null || true
    /bin/kill -HUP `cat /var/run/clamav/freshclam.pid 2>/dev/null` 2>/dev/null || true
    endscript
}