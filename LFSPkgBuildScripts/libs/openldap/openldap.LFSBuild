#!/bin/bash -e

. /usr/share/LFSPkg/LFSFunctions

DEPENDS="Cyrus-SASL-2.1.26 OpenSSL-1.0.2"
if ! lfspkg -B "$DEPENDS";then
	exit 100
fi

PKGNAME="openldap"
TARNAME="$PKGNAME"
VERSION="2.4.44"
BUILD=1
SECTION="LIBS"
SUFFIX="LFSPKG"
TARBALL="${TARNAME}-${VERSION}.tgz"
PKG="${OUTPUT}/${PKGNAME}"
DOWHAT=${1:-"build"}
CWD=$(pwd)

UIDGIDPAIR=$(findnextpair "system")
groupadd -g $UIDGIDPAIR ldap||true
useradd -c "OpenLDAP Daemon Owner" -d /var/lib/openldap -g ldap -s /bin/false -u $UIDGIDPAIR ldap||true

scriptLog "${PKGNAME}-${VERSION}"
gettar "ftp://ftp.openldap.org/pub/OpenLDAP/openldap-release/${TARBALL}" $SECTION
gettar "http://www.linuxfromscratch.org/patches/blfs/${LFSVERSION}/${PKGNAME}-${VERSION}-consolidated-2.patch" $SECTION
rm -rf "$PKG" || true
mkdir -p "$PKG"

pushd $COMPILEAT 2>/dev/null||true
	tar -xvf "${SOURCEARCHIVES}/${SECTION}/${TARBALL}"
	pushd "${TARNAME}-${VERSION}"
		patch -Np1 -i ${SOURCEARCHIVES}/${SECTION}/${PKGNAME}-${VERSION}-consolidated-2.patch
		autoconf

		CFLAGS="$LFSFLAGS" CXXFLAGS="$LFSFLAGS" ./configure ${CONFIGOPTIONS} --disable-slapd --enable-dynamic --with-tls=openssl --with-cyrus-sasl --enable-crypt --enable-spasswd --enable-slapd --enable-modules --enable-rlookups --enable-backends=mod --disable-ndb --disable-sql --disable-shell --disable-bdb --disable-hdb --enable-overlays=mod
		make depend $MAKEFLAGS||make depend|| exit 100
		make $MAKEFLAGS||make|| exit 100
		make install DESTDIR=$PKG || exit 100

		install -v -dm700 -o ldap -g ldap $PKG/var/lib/openldap
		install -v -dm700 -o ldap -g ldap $PKG/etc/openldap/slapd.d
		chmod -v 640 $PKG/etc/openldap/slapd.{conf,ldif}
		install -v -dm755 $PKG/usr/share/doc/${PKGNAME}-${VERSION}
		cp -vfr doc/{drafts,rfc,guide} $PKG/usr/share/doc/${PKGNAME}-${VERSION}
	popd

	checketc "$PKG"
	packageclean "$PKG" "$CWD"

	pushd "$PKG"
		/usr/bin/lfspkg -n "$PKGNAME" -p "$VERSION" -d $SECTION -b $BUILD -s $SUFFIX -m
	popd

	case $DOWHAT in
		up*)
			lfspkg "^${PKGNAME}-[0-9][0-9]*" "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -u
			;;
		"install")
			lfspkg "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -i
			;;
		"build")
			echo "Just built"
			;;
		*)
			echo "*** Unknown command ***"
			exit 1
	esac

	rm -r "$PKG" "${TARNAME}-${VERSION}"
popd 2>/dev/null||true
