#!/bin/bash -e

. /usr/share/LFSPkg/LFSFunctions

DEPENDS="libx86emu-1.11"
if ! lfspkg -B "$DEPENDS";then
	exit 100
fi

PKGNAME="hwinfo"
TARNAME="$PKGNAME"
VERSION="20.1"
BUILD=${BUILD:-1}
SECTION="HWARE"
SUFFIX="LFSPKG"
TARBALL="${TARNAME}-${VERSION}.tar.xz"
PKG="${OUTPUT}/${PKGNAME}"
DOWHAT=${1:-"build"}
CWD=$(pwd)

scriptLog "${PKGNAME}-${VERSION}"
gettar "http://www.liwjatan.at/files/src/hwinfo/${TARBALL}" $SECTION
rm -rf "$PKG" || true
mkdir -p "$PKG"

pushd $COMPILEAT 2>/dev/null||true
	tar -xvf "${SOURCEARCHIVES}/${SECTION}/${TARBALL}"
	pushd "${TARNAME}-${VERSION}"
		#Thx to Slackbuilds.org for this bit
		#https://slackbuilds.org/slackbuilds/14.2/libraries/libx86emu/
		#disable regeneration of changelog and VERSION
		chmod -x ./git2log
		# use our CFLAGS
		sed -i "s/-O2/$LFSFLAGS/" Makefile
		echo $VERSION > VERSION
		make $MAKEFLAGS LIBDIR=/usr/lib$LIBDIRSUFFIX||make LIBDIR=/usr/lib$LIBDIRSUFFIX|| exit 100
		make LIBDIR=/usr/lib$LIBDIRSUFFIX DESTDIR=$PKG install || exit 100
	popd

	checketc "$PKG"
	packageclean "$PKG" "$CWD"

	pushd "$PKG"
		/usr/bin/lfspkg -n "$PKGNAME" -p "$VERSION" -d $SECTION -b $BUILD -s $SUFFIX -m
	popd

	case $DOWHAT in
		up*)
			lfspkg "^${PKGNAME}-[0-9][0-9]*" "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -u
			;;
		"install")
			lfspkg "${OUTPUT}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -i
			;;
		"build")
			echo "Just built"
			;;
		*)
			echo "*** Unknown command ***"
			exit 1
	esac

	rm -r "$PKG" "${TARNAME}-${VERSION}"
popd 2>/dev/null||true
