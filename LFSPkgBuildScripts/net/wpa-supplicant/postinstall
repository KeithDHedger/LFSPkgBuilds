#!/bin/bash

update-desktop-database

cat > /etc/sysconfig/ifconfig.wifi0 << "EOF"
ONBOOT="yes"
IFACE="wlan0"
SERVICE="wpa"

# Additional arguments to wpa_supplicant
WPA_ARGS=""

WPA_SERVICE="ipv4-static"
IP="192.168.1.112"
GATEWAY="192.168.1.254"
PREFIX="24"
BROADCAST="192.168.1.255"
EOF

update-desktop-database
