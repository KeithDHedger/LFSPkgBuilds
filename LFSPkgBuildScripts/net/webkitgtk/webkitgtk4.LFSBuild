#!/bin/bash -e

. /usr/share/LFSPkg/LFSFunctions

trap 'echo -e "$0 ${RED}FAILED${NORMAL} at line ${GREEN}${LINENO}${NORMAL}"' ERR

DEPENDS="gst-plugins-base-1.22.3 gst-plugins-bad-1.22.3 GTK-2.24.33 icu-72.1 libgudev-237 libsoup3-3.2.2 MesaLib-22.3.5 Ruby-3.2.1 SQLite-3.40.1 Which-2.21 libwebp-1.3.0 libsecret-0.20.5 gtk-doc-1.33.2 libgcrypt-1.10.1 libnotify3-0.8.1 enchant-2.3.3"

if ! lfspkg -B "$DEPENDS";then
	exit 100
fi

PKGNAME="webkitgtk4"
TARNAME="webkitgtk"
VERSION="2.38.5"
BUILD=${BUILD:-1}
SECTION="NET"
SUFFIX="LFSPKG"
TARBALL="${TARNAME}-${VERSION}.tar.xz"
PKG="${OUTPUT}/${PKGNAME}"
DOWHAT=${1:-"build"}
CWD=$(pwd)

scriptLog "${PKGNAME}-${VERSION}"
gettar "http://webkitgtk.org/releases/${TARBALL}" $SECTION
rm -rf "$PKG" || true
mkdir -p "$PKG"

if [ $USESYSTEMD -eq 0 ];then
	SYSTEMDOPTS="-DUSE_SYSTEMD=OFF"
else
	SYSTEMDOPTS="-DENABLE_GAMEPAD=OFF"
fi

pushd $COMPILEAT 2>/dev/null||true
	extractarchive "${SOURCEARCHIVES}/${SECTION}/${TARBALL}"
	pushd "${TARNAME}-${VERSION}"
		mkdir -vp build||true
		cd build
		cmake $CMAKEOPTIONS -DCMAKE_SKIP_RPATH=ON -DPORT=GTK -DLIB_INSTALL_DIR=/usr/lib${LIBDIRSUFFIX} -DUSE_LIBHYPHEN=OFF -DENABLE_MINIBROWSER=ON -DUSE_WOFF2=OFF -DUSE_WPE_RENDERER=OFF -DENABLE_BUBBLEWRAP_SANDBOX=OFF -DENABLE_GEOLOCATION=OFF -DENABLE_GAMEPAD=OFF -DENABLE_DOCUMENTATION=OFF -DENABLE_JOURNALD_LOG=OFF -DENABLE_BUBBLEWRAP_SANDBOX=OFF $SYSTEMDOPTS -G Ninja ..

#This is a BIG build so be patient.
#If you have a low power/resource machine you may want to adjust the MAKEFLAGS var downwards, eg MAKEFLAGS="-j1" ./webkitgtk4.LFSBuild install, this will slow down the build but help stop lockups due to lack of resources.  
		ninja $MAKEFLAGS||ninja -j1||exit 100
		DESTDIR=$PKG ninja install||exit 100
		install -vdm755 $PKG/usr/share/gtk-doc/html/webkit2gtk-4.0 $PKG/usr/share/gtk-doc/html/webkit2gtk-web-extension-4.0
		install -vm644  ../Documentation/webkit2gtk-4.1/* $PKG/usr/share/gtk-doc/html/webkit2gtk-4.0
		install -vm644  ../Documentation/webkit2gtk-web-extension-4.1/* $PKG/usr/share/gtk-doc/html/webkit2gtk-web-extension-4.0
	popd

	checketc $PKG
	packageclean "$PKG" "$CWD"

	pushd "$PKG"
		lfspkg -n "$PKGNAME" -p "$VERSION" -d $SECTION -b $BUILD -s $SUFFIX -m
	popd

	case $DOWHAT in
		up*)
			lfspkg "^${PKGNAME}-[0-9][0-9]*" "${PKGARCHIVES}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -u
			;;
		"install")
			lfspkg "${PKGARCHIVES}/${SECTION}/${PKGNAME}-${VERSION}-${BUILD}_${SECTION}_${SUFFIX}.tar.gz" -i
			;;
		"build")
			echo "Just built"
			;;
		*)
			echo "*** Unknown command ***"
			exit 1
	esac

	rm -r "$PKG" "${TARNAME}-${VERSION}"
popd 2>/dev/null||true


















